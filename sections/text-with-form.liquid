{% schema %}
{
  "name": "Text & Form",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Contact Us"
    },
    {
      "type": "textarea",
      "id": "contact_info",
      "label": "Contact Info",
      "default": "You can reach us via email at support@example.com or call us at +123-456-7890."
    },
    {
      "type": "text",
      "id": "address",
      "label": "Address",
      "default": "123 Main Street, City, Country"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email",
      "default": "support@example.com"
    },
    {
      "type": "text",
      "id": "phone_number",
      "label": "Phone Number",
      "default": "+123-456-7890"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Background Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "section_padding",
      "label": "Section Padding",
      "default": 40,
      "min": 10,
      "max": 100,
      "step": 5,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading Font Size",
      "default": 28,
      "min": 16,
      "max": 48,
      "step": 2,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "text_size",
      "label": "Text Font Size",
      "default": 16,
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "input_spacing",
      "label": "Form Input Spacing",
      "default": 10,
      "min": 5,
      "max": 20,
      "step": 1,
      "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "Text & Form",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<section class="two-column-contact-section page-width">
  <div class="container">
    <div class="two-column-grid">
      <!-- Left Column -->
      <div class="contact-info">
        <h2 style="color: {{ section.settings.heading_color }}; font-size: {{ section.settings.heading_size }}px;">
          {{ section.settings.heading }}
        </h2>
        <p style="color: {{ section.settings.text_color }}; font-size: {{ section.settings.text_size }}px;">
          {{ section.settings.contact_info }}
        </p>

        <!-- Icon Box for Address, Email, and Phone -->
        <div class="contact-details">
          <div class="contact-detail-item">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              fill="currentColor"
              class="bi bi-geo-alt"
              viewBox="0 0 16 16"
            >
              <path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A32 32 0 0 1 8 14.58a32 32 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10"/>
              <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4m0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6"/>
            </svg>
            <span>{{ section.settings.address }}</span>
          </div>
          <div class="contact-detail-item">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              fill="currentColor"
              class="bi bi-envelope"
              viewBox="0 0 16 16"
            >
              <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1zm13 2.383-4.708 2.825L15 11.105zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741M1 11.105l4.708-2.897L1 5.383z"/>
            </svg>
            <span> {{ section.settings.email }}</span>
          </div>
          <div class="contact-detail-item">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              fill="currentColor"
              class="bi bi-telephone"
              viewBox="0 0 16 16"
            >
              <path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.6 17.6 0 0 0 4.168 6.608 17.6 17.6 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.68.68 0 0 0-.58-.122l-2.19.547a1.75 1.75 0 0 1-1.657-.459L5.482 8.062a1.75 1.75 0 0 1-.46-1.657l.548-2.19a.68.68 0 0 0-.122-.58zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.68.68 0 0 0 .178.643l2.457 2.457a.68.68 0 0 0 .644.178l2.189-.547a1.75 1.75 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.6 18.6 0 0 1-7.01-4.42 18.6 18.6 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877z"/>
            </svg>
            <span> {{ section.settings.phone_number }}</span>
          </div>
        </div>
      </div>

      <!-- Right Column - Contact Form -->
      <div class="contact-form">
        {% form 'contact' %}
          <div class="field">
            <label for="ContactFormName">Name</label>
            <input type="text" id="ContactFormName" name="contact[name]" placeholder="Your Name" required>
          </div>

          <div class="field">
            <label for="ContactFormEmail">Email</label>
            <input type="email" id="ContactFormEmail" name="contact[email]" placeholder="Your Email" required>
          </div>

          <div class="field">
            <label for="ContactFormMessage">Message</label>
            <textarea id="ContactFormMessage" name="contact[body]" placeholder="Your Message" required></textarea>
          </div>

          <input type="submit" value="Send">
        {% endform %}
      </div>
    </div>
  </div>
</section>

<style>
    .two-column-contact-section {
      padding: {{ section.settings.section_padding }}px 0;
    }

    .two-column-grid {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      gap: 20px;
    }

    /* Make the columns responsive */
    .contact-info, .contact-form {
      flex: 1 1 45%;
    }
    .contact-info {
      align-items: start;
    }
    .contact-info p {
      text-align: start;
  }
  .contact-details .contact-detail-item {
      text-align: start;
      color: black;
  }


    /* Responsive Layout */
    @media (max-width: 768px) {
      .two-column-grid {
        flex-direction: column;
      }

      .contact-info, .contact-form {
        flex: 1 1 100%;
      }

      .contact-form {
        margin-top: 30px;
      }


    .contact-details {
      margin-top: 20px;
    }

    .contact-detail-item {
      display: flex;
      align-items: center;
      margin-bottom: 10px;
    }

    .contact-detail-item svg {
      margin-right: 10px;
      font-size: 18px;
      color: #000;
    }

    .contact-detail-item span {
      font-size: 16px;
      color: {{ section.settings.text_color }};
    }

    .contact-form form {
      display: flex;
      flex-direction: column;
    }

    .contact-form label {
      margin-top: 10px;
      font-size: 14px;
    }

    .contact-form input, .contact-form textarea {
      margin-top: {{ section.settings.input_spacing }}px;
      padding: 10px;
      font-size: 14px;
      width: 100%;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    .contact-form textarea {
      height: 150px;
    }

    .contact-form input[type="submit"] {
      margin-top: 15px;
      color: #fff;
      border: none;
      padding: 12px;
      cursor: pointer;
      border-radius: 4px;
    }

    .contact-form input[type="submit"]:hover {
      background-color: lighten({{ section.settings.button_color }}, 10%);
    }
</style>
